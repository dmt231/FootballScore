<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/timeMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:fontFamily="sans-serif-medium"
            android:text="03/01/2024"
            android:textColor="@color/grayTheme"
            android:textSize="@dimen/_11ssp" />

        <TextView
            android:id="@+id/statusMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="sans-serif-medium"
            android:text="FT"
            android:textColor="@color/grayTheme"
            android:textSize="@dimen/_11ssp" />
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="@dimen/_35sdp"
        android:background="@color/grayTheme"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageHome"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/football_club"
                android:layout_marginTop="@dimen/_3sdp"/>
            <TextView
                android:id="@+id/nameHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Club"
                android:textColor="@color/grayTheme"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/scoreHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/grayTheme"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_80sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageAway"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:src="@drawable/football_club"
                android:layout_marginTop="@dimen/_3sdp"/>
            <TextView
                android:id="@+id/nameAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Club"
                android:textColor="@color/grayTheme"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_10sdp"/>
            <TextView
                android:id="@+id/scoreAway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/grayTheme"
                android:fontFamily="sans-serif-medium"
                android:textSize="@dimen/_13ssp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_80sdp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>